<h1>Edit Comment</h1>

<%= form_for @comment do |f| %>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>

	<p>
		<%= f.label :venue_name %><br>
		<%= f.text_field :venue_name %>
	</p>

	<p>
		<%= f.label :city_and_state %><br>
		<%= f.text_field :city_and_state %>
	</p>

	<p>
		<%= f.label :user_name %><br>
		<%= f.text_field :user_name %>
	</p>

	<p>
		<%= f.label :body %><br>
		<%= f.text_area :body %>
	</p>

	<p>
		<%= f.submit "Update Comment" %>
	</p>
<% end %>