<h1><%= link_to "Add a Comment", new_comment_path %></h1>

<% @comments.each do |comment| %>
	<h1><%= comment.title %></h1>
	<h2><%= comment.venue_name %></h2>
	<h2><%= comment.city_and_state %></h2>
	<h3><%= comment.user_name %></h3>
	<p><%= comment.body %></p>
	<p><%= comment.created_at %></p>
	<%= link_to 'Delete', [current_user, comment], confirm: "Are you sure?", method: :delete %>
	<%= link_to 'Edit', edit_comment_path(comment) %>
<% end %>	